<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gainsboro"
    android:paddingLeft="@dimen/activity_horizontal_margin_in"
    android:paddingRight="@dimen/activity_horizontal_margin_in"
    android:paddingTop="@dimen/activity_vertical_margin_in" 
    android:paddingBottom="@dimen/activity_vertical_margin_in" 
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/key_group"
        android:layout_width="93dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:gravity="start|center_vertical"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_pts"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_win"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_draw"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_lose"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_gf"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/str_group_ga"
        android:textSize="14sp"
        android:textStyle="bold" />     
    
</LinearLayout>
