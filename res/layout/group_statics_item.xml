<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_horizontal_margin_in"
    android:paddingLeft="@dimen/activity_horizontal_margin_in"
    android:paddingRight="@dimen/activity_horizontal_margin_in"
    android:paddingTop="@dimen/activity_horizontal_margin_in" 
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/flag"
            android:layout_width="70dp"
            android:layout_height="46dp"
            android:scaleType="fitCenter"
            android:src="@drawable/t_null"/>
        
         <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/value_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="start"
            android:textSize="14sp" 
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/value_pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:gravity="center" />
                
        <TextView
            android:id="@+id/value_w"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/value_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/value_l"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/value_gf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/value_ga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>